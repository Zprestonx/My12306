<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >
<TableLayout android:layout_width="0dp"
               android:layout_height="60dp"
    android:layout_weight="3">
    <TableRow
        android:layout_height="0dp"
        android:layout_weight="1.5">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="orderNo"
        android:layout_weight="2.2"
        android:id="@+id/orderNo" />
        <LinearLayout
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:paddingLeft="7dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="trainMes"
                android:layout_weight="1.5"
                android:id="@+id/trainMes" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:id="@+id/contactNum"
                android:gravity="center"
                android:text="contactNum"/>

        </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:text="orderState"
        android:layout_weight="1"
        android:id="@+id/orderState" />
</TableRow>
<TableRow
    android:layout_height="0dp"
    android:layout_weight="1.8">
    <TextView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:text="trainNo"
        android:layout_weight="1"
        android:id="@+id/trainNo"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="30px"
        android:gravity="center"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="orderTime"
        android:layout_weight="1.5"
        android:layout_gravity="center"
        android:textColor="@color/gray"
        android:id="@+id/orderTime" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="orderPrice"
        android:layout_weight="1"
        android:id="@+id/orderPrice"
        android:gravity="top"/>
    </TableRow>
</TableLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:src="@drawable/forward_icon"
        android:id="@+id/im"/>
</LinearLayout>
