<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
<TableLayout android:layout_width="0dp"
               android:layout_height="wrap_content"
    android:layout_weight="3">
    <TableRow>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="orderNo"
        android:layout_weight="1"

        android:id="@+id/orderNo" />
    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="startDate"
    android:layout_weight="1.5"
        android:textColor="@color/gray"
    android:id="@+id/startDate" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="orderState"
        android:layout_weight="1"
        android:id="@+id/orderState" />
</TableRow>
<TableRow>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="trainNo"
        android:layout_weight="1"
        android:id="@+id/trainNo"
        android:textColor="@color/black"
        android:textSize="30px"
        android:gravity="center"/>
    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="trainMes"
    android:layout_weight="1.5"
    android:id="@+id/trainMes" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="orderPrice"
        android:layout_weight="1"
        android:id="@+id/orderPrice"
        android:gravity="bottom"/>
    </TableRow>
</TableLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="0.5"
        android:src="@drawable/order_tes"
        android:id="@+id/im" />
</LinearLayout>
