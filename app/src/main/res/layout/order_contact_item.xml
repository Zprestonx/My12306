<?xml version="1.0" encoding="utf-8"?>
<com.zpreston.my12306.CustomView.CoustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/front"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contactName"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="contactName" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/trainNo"
                android:gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:text="trainNo" />

            <TextView
                android:id="@+id/orderTime"
                android:gravity="top|center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="orderTime" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderSeat"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="orderSeat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/darksalmon"
            android:gravity="center"
            android:text="改签"
            android:textColor="@color/white"
            android:id="@+id/change"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/salmon"
            android:text="退票"
            android:textColor="@color/white"
            android:id="@+id/cancel" />

    </LinearLayout>

</com.zpreston.my12306.CustomView.CoustomLinearLayout>
