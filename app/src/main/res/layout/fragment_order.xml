<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zpreston.my12306.fragment.OrderFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出发城市"
        android:id="@+id/tv"
        android:layout_alignTop="@+id/tv2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到达城市"
        android:id="@+id/tv2"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text        >"
        android:id="@+id/BeginCity"
        android:textColor="@color/black"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/tv"
        android:layout_alignStart="@+id/tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text        >"
        android:textColor="@color/black"
        android:id="@+id/EndCity"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/tv2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/exchange"
        android:layout_alignBottom="@+id/BeginCity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出发日期"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/tv"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期"
        android:textColor="@color/black"
        android:id="@+id/Time"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/EndCity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="查询"
        android:textSize="18dp"
        android:background="@color/lightblue"
        android:textColor="@color/white"
        android:id="@+id/query"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询历史"
        android:id="@+id/textView2"
        android:background="@color/lightblue"
        android:textColor="@color/white"
        android:ems="1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/query"
        android:layout_toStartOf="@+id/textView" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />


</RelativeLayout>
